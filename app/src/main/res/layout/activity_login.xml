<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/judulLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:text="LOGIN"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/inputUsernameLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masukan Username"
        android:textSize="20dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/judulLogin"
        />
    <EditText
        android:id="@+id/inputUsername"
        app:layout_constraintTop_toBottomOf="@id/inputUsernameLabel"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="16dp"
        android:textColorHint="#fff"
        android:paddingLeft="10dp"
        android:hint="USERNAME"
        android:background="#00A859"
        android:inputType="text"/>


    <TextView
        android:id="@+id/inputPasswordLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masukan Password"
        android:textSize="20dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/inputUsername"
        />
    <EditText
        android:id="@+id/inputPassword"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="16dp"
        android:textColorHint="#fff"
        android:paddingLeft="10dp"
        android:hint="PASSWORD"
        android:background="#00A859"
        app:layout_constraintTop_toBottomOf="@id/inputPasswordLabel"
        android:inputType="text"/>

    <Button
        android:id="@+id/ButtonLogin"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:backgroundTint="#3E4095"
        android:text="MASUK"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputPassword"
        app:layout_constraintVertical_bias="0.161" />
</androidx.constraintlayout.widget.ConstraintLayout>