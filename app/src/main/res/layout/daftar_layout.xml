<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:weightSum="1"
        >

        <TextView
            android:id="@+id/button1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="#ed3237"
            />

        <TextView
            android:layout_weight="1"
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_rowWeight="4"
            android:layout_columnWeight="4"
            android:text="Pendaftaran"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#f4CC2D" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="30dp"
        android:layout_margin="16dp"
        >
        <View
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="#00AFEF" />

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_rowWeight="4"
            android:layout_columnWeight="4"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/inputNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#fff"
                    android:paddingLeft="10dp"
                    android:hint="Nama"
                    android:background="#00A859"
                    android:padding="5dp"
                    android:inputType="text"/>
                <EditText
                    android:layout_marginTop="20dp"

                    android:id="@+id/inputNim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#fff"
                    android:paddingLeft="10dp"
                    android:padding="5dp"

                    android:hint="NIM"
                    android:background="#00A859"
                    android:inputType="text"/>
                <EditText
                    android:layout_marginTop="20dp"
                    android:id="@+id/inputEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#fff"
                    android:paddingLeft="10dp"
                    android:padding="5dp"

                    android:hint="EMAIL"
                    android:background="#00A859"
                    android:inputType="text"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/showInput"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:text="Daftar"
        android:textSize="20dp"
        android:backgroundTint="#3E4095"
        android:textColor="@android:color/white"
        />
</LinearLayout>